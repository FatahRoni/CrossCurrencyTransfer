<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warna_background"
    tools:context=".features.auth.lupapassword.LupaPasswordActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="17dp"
        android:minHeight="17dp"
        android:src="@drawable/ic_x_kiri"
        android:paddingTop="19.5dp"
        android:paddingStart="295.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ivcross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="17dp"
        android:minHeight="17dp"
        android:src="@drawable/ic_x_kanan"
        android:paddingTop="19.5dp"
        android:paddingStart="295.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ivPesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="87dp"
        android:minHeight="100dp"
        android:src="@drawable/ic_pesan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivcross"
        android:layout_marginTop="19.5dp"/>

    <TextView
        android:id="@+id/tvPermohonan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/permohonan_peru"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPesan"
        android:layout_marginTop="5dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cek Email Sekarang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPermohonan"/>

</androidx.constraintlayout.widget.ConstraintLayout>